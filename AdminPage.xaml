<Page x:Class="Loto_App.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Loto_App"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Administrativni Panel">
    <Page.Background>
        <VisualBrush TileMode="Tile" Viewport="0,0,50,50" ViewportUnits="Absolute" Viewbox="0,0,100,100" ViewboxUnits="Absolute">
            <VisualBrush.Visual>
                <Rectangle Width="100" Height="100" Fill="#EEEEEE">
                    <Rectangle.OpacityMask>
                        <DrawingBrush Viewport="0,0,0.5,0.5" ViewportUnits="RelativeToBoundingBox" TileMode="Tile">
                            <DrawingBrush.Drawing>
                                <GeometryDrawing Brush="White">
                                    <GeometryDrawing.Geometry>
                                        <GeometryGroup>
                                            <RectangleGeometry Rect="0,0,10,10" />
                                        </GeometryGroup>
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                    </Rectangle.OpacityMask>
                </Rectangle>
            </VisualBrush.Visual>
        </VisualBrush>
    </Page.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- IZADJI Button added here -->
        <Button Content="IZADJI" 
                Width="80" 
                Height="40" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Click="ExitButton_Click" 
                Margin="10"
                Background="#373737"
                Foreground="White" 
                FontWeight="Bold"/>

        <!-- LISTA KORISNIKA Button added here -->
        <Button Content="LISTA KORISNIKA" 
                Width="150" 
                Height="40" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Click="OpenUserListPage_Click" 
                Margin="100,10,0,0"
                Background="#373737"
                Foreground="White" 
                FontWeight="Bold"/>

        <TextBlock Text="Administrativni Panel" 
                   HorizontalAlignment="Center" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="10" 
                   Grid.Row="0"/>

        <Grid Grid.Row="1" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Generisanje novog korisnika -->
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <TextBlock Text="Generisanje novog korisnika" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>
                <Button Content="Generiši korisnika" 
                        Click="GenerateUser_Click" 
                        Width="200" 
                        Height="40" 
                        Background="#373737" 
                        Foreground="White" 
                        FontWeight="Bold"/>
                <TextBlock x:Name="GeneratedPassword" 
                          FontSize="16" 
                          FontWeight="DemiBold" 
                          Foreground="#373737" 
                          Margin="0,10,0,0">
                    <TextBlock.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Copy" Click="CopyPassword_Click"/>
                        </ContextMenu>
                    </TextBlock.ContextMenu>
                </TextBlock>
            </StackPanel>

            <!-- Resetovanje uređaja i odobravanje dva uređaja -->
            <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,20,0,0">
                <TextBlock Text="Unesite šifru korisnika" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           />
                <TextBox x:Name="UserPasswordInput" 
                         Width="250" 
                         Margin="0,0,0,10"/>
                <Button Content="Resetuj uređaj" 
                        Click="ResetDevice_Click" 
                        Width="200" 
                        Height="40" 
                        Background="#e80000" 
                        Foreground="White" 
                        FontWeight="Bold"/>

                <Button Content="Odobri 2 Uređaja" 
                        Click="ApproveTwoDevicesButton_Click" 
                        Width="200" 
                        Height="40" 
                        Background="#e80000" 
                        Foreground="White" 
                        FontWeight="Bold"
                        Margin="10"/>

                <TextBlock x:Name="ResetStatusMessage" 
                           FontSize="16" 
                           FontWeight="DemiBold" 
                           Foreground="#373737" 
                           Margin="0,10,0,0"
                           Text=""/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
