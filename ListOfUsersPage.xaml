<Page x:Class="Loto_App.ListOfUsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Loto_App"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Lista Korisnika">

    <Page.Background>
        <VisualBrush TileMode="Tile" Viewport="0,0,50,50" ViewportUnits="Absolute" Viewbox="0,0,100,100" ViewboxUnits="Absolute">
            <VisualBrush.Visual>
                <Rectangle Width="100" Height="100" Fill="#EEEEEE">
                    <Rectangle.OpacityMask>
                        <DrawingBrush Viewport="0,0,0.5,0.5" ViewportUnits="RelativeToBoundingBox" TileMode="Tile">
                            <DrawingBrush.Drawing>
                                <GeometryDrawing Brush="White">
                                    <GeometryDrawing.Geometry>
                                        <GeometryGroup>
                                            <RectangleGeometry Rect="0,0,10,10" />
                                        </GeometryGroup>
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                    </Rectangle.OpacityMask>
                </Rectangle>
            </VisualBrush.Visual>
        </VisualBrush>
    </Page.Background>

    <Grid>
        <!-- Row Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- NAZAD Button -->
        <Button Content="NAZAD" 
                Width="80" 
                Height="40" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Click="Back_Button_Click" 
                Margin="10"
                Background="#373737"
                Foreground="White" 
                FontWeight="Bold"/>

        <!-- Title TextBlock -->
        <TextBlock Text="Lista Korisnika" 
                   HorizontalAlignment="Center" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="10" 
                   Grid.Row="0"/>

        <!-- User Data Grid with manually defined columns -->
        <Grid Grid.Row="1" Margin="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <DataGrid x:Name="UserDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          Margin="10">
                    <!-- Manually define columns -->
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="UID" Binding="{Binding UID}" />
                        <DataGridTextColumn Header="Password" Binding="{Binding Password}" />
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                        <DataGridTextColumn Header="DeviceID" Binding="{Binding DeviceID}" />
                        <DataGridTextColumn Header="SecondDeviceAllowed" Binding="{Binding SecondDeviceAllowed}" />
                        <DataGridTextColumn Header="SecondDeviceID" Binding="{Binding SecondDeviceID}" />
                        <DataGridTextColumn Header="CreatedAt" Binding="{Binding CreatedAt}" />
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
